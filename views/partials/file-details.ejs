<h2><%= file.name %></h2>

<div class="file-container">
  <span class="detail" data-bytes="<%= file.size %>">
    Size: <%= file.size %>
  </span>

  <span class="detail"> Created: <%= file.createdAt %> </span>
</div>
<a href="/dashboard">Back to Dashboard</a>

<script>
  function formatFileSize(bytes) {
    if (bytes === 0) return "0 B";
    const units = ["B", "KB", "MB", "GB", "TB"];
    const i = Math.floor(Math.log(bytes) / Math.log(1024));
    const size = bytes / Math.pow(1024, i);
    return `${size.toFixed(1)} ${units[i]}`;
  }

  document.querySelectorAll(".detail[data-bytes]").forEach((span) => {
    const bytes = parseInt(span.dataset.bytes, 10);
    span.textContent = `Size: ${formatFileSize(bytes)}`;
  });
</script>
